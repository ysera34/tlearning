<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tacademy.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="15dp"
        android:background="@android:color/black">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/result_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:gravity="right|bottom"
                tools:text="123+45=\n168"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/option_button_background_gradient"/>
            <Button
                android:id="@+id/eraser_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="지우기"
                android:background="@drawable/option_button_background_gradient"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/number7_button"
                style="@style/NumberButtonBaseStyle"
                android:text="7">

            </Button>
            <Button
                android:id="@+id/number8_button"
                style="@style/NumberButtonBaseStyle"
                android:text="8">

            </Button>
            <Button
                android:id="@+id/number9_button"
                style="@style/NumberButtonBaseStyle"
                android:text="9">

            </Button>
            <Button
                android:id="@+id/option_divide_button"
                style="@style/OptionButtonBaseStyle"
                android:text="/">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/number4_button"
                style="@style/NumberButtonBaseStyle"
                android:text="4">

            </Button>
            <Button
                android:id="@+id/number5_button"
                style="@style/NumberButtonBaseStyle"
                android:text="5">

            </Button>
            <Button
                android:id="@+id/number6_button"
                style="@style/NumberButtonBaseStyle"
                android:text="6">

            </Button>
            <Button
                android:id="@+id/option_multiply_button"
                style="@style/OptionButtonBaseStyle"
                android:text="*">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/number1_button"
                style="@style/NumberButtonBaseStyle"
                android:text="1">

            </Button>
            <Button
                android:id="@+id/number2_button"
                style="@style/NumberButtonBaseStyle"
                android:text="2">

            </Button>
            <Button
                android:id="@+id/number3_button"
                style="@style/NumberButtonBaseStyle"
                android:text="3">

            </Button>
            <Button
                android:id="@+id/option_subtract_button"
                style="@style/OptionButtonBaseStyle"
                android:text="-">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/number_dot_button"
                style="@style/NumberButtonBaseStyle"
                android:text=".">

            </Button>
            <Button
                android:id="@+id/number0_button"
                style="@style/NumberButtonBaseStyle"
                android:text="0">

            </Button>
            <Button
                android:id="@+id/option_equal_button"
                style="@style/OptionButtonBaseStyle"
                android:text="=">

            </Button>
            <Button
                android:id="@+id/option_add_button"
                style="@style/OptionButtonBaseStyle"
                android:text="+">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
